# Environment Configuration for Crypto Trading System
# Copy this file to .env and configure with your actual values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# BINANCE API CONFIGURATION
# =============================================================================
# Get your API credentials from https://www.binance.com/en/my/settings/api-management
# IMPORTANT: Keep these secret and never commit them to version control

BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Use testnet for development (true) or mainnet for production (false)
BINANCE_TESTNET=true

# =============================================================================
# TRADING PARAMETERS
# =============================================================================

# Stop loss percentage (0.1 = 10%)
STOP_LOSS_PERCENTAGE=0.1

# Default trade amount in USDT
TRADE_AMOUNT_USDT=10.0

# Maximum number of open positions
MAX_OPEN_POSITIONS=5

# Maximum number of trades per day
MAX_DAILY_TRADES=20

# Daily loss limit in USDT
DAILY_LOSS_LIMIT=100.0

# Supported trading pairs (comma-separated)
SUPPORTED_COINS=["BTC", "ETH", "BNB", "ADA", "SOL"]

# Individual trade amounts per symbol (JSON format)
TRADE_AMOUNTS={"BTCUSDT": 10.0, "ETHUSDT": 10.0, "BNBUSDT": 10.0, "ADAUSDT": 10.0, "SOLUSDT": 10.0}

# =============================================================================
# NEWS AND SENTIMENT ANALYSIS
# =============================================================================

# News sources and platforms to monitor
NEWS_WEBSOCKET_URL=wss://api.formula-news.com/ws
FOCUS_PLATFORMS=["Binance", "CoinDesk", "CoinTelegraph", "Bloomberg"]

# Keywords for sentiment analysis (JSON format)
POSITIVE_KEYWORDS=["bullish", "moon", "pump", "rally", "partnership", "adoption", "breakthrough", "upgrade"]
NEGATIVE_KEYWORDS=["bearish", "dump", "crash", "hack", "scam", "regulation", "ban", "lawsuit"]

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================

# Web dashboard server settings
API_HOST=127.0.0.1
API_PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection URL (SQLite for development, can be changed to PostgreSQL/MySQL for production)
DATABASE_URL=sqlite:///./crypto_trading.db

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=crypto_trading.log

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. Never commit this file with real API keys to version control
# 2. Use testnet for development and testing
# 3. Start with small amounts when moving to production
# 4. Regularly rotate your API keys
# 5. Monitor your account for unusual activity
# 6. Set appropriate stop-loss and risk limits

# =============================================================================
# QUICK START GUIDE
# =============================================================================

# 1. Copy this file to .env
# 2. Replace your_api_key_here and your_api_secret_here with actual Binance API credentials
# 3. For development: Keep BINANCE_TESTNET=true
# 4. For production: Set BINANCE_TESTNET=false and ENVIRONMENT=production
# 5. Adjust trading parameters according to your risk tolerance
# 6. Run: python main.py